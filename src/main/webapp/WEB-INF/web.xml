<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Movieland</display-name>

    <servlet>
        <servlet-name>movieland</servlet-name>
        <servlet-class>com.movieland.servlet.AllMovies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>movieland</servlet-name>
        <url-pattern>/v1/movies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.movieland.servlet.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>